
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin roles
    function isAdmin(userId) {
      // Allow if the user exists and their role is owner or co-owner
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role in ['owner', 'co-owner'];
    }

    // USER PROFILES
    match /users/{userId} {
      // READ: Any authenticated user can read profiles.
      allow read: if request.auth != null;
      
      // LIST: Only admins can list all users (for the admin panel).
      allow list: if request.auth != null && isAdmin(request.auth.uid);

      // CREATE: A user can create their own profile document.
      allow create: if request.auth.uid == userId;

      // UPDATE: A user can update their own profile, or an admin can update any profile.
      allow update: if request.auth.uid == userId || isAdmin(request.auth.uid);
      
      // DELETE: Deleting users should be handled by server-side logic, not direct client deletion.
      allow delete: if false;
    }

    // POSTS
    match /posts/{postId} {
      // READ, LIST: Any authenticated user can read and list posts for the feed.
      allow read, list: if request.auth != null;

      // CREATE: An authenticated user can create a post if they are the author.
      allow create: if request.auth.uid == request.resource.data.authorId;

      // UPDATE: The author can update their post. Admins can also update posts for moderation.
      allow update: if request.auth.uid == resource.data.authorId || isAdmin(request.auth.uid);
      
      // DELETE: The author or an admin/moderator can delete a post.
      allow delete: if request.auth.uid == resource.data.authorId ||
                       (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator']);
    }

    // USER GUIDES
    match /userGuides/{guideId} {
        // READ, LIST: Any authenticated user can read and list guides.
        allow read, list: if request.auth != null; 
        
        // CREATE: An authenticated user can create a guide if they are the author.
        allow create: if request.auth.uid == request.resource.data.authorId;
        
        // UPDATE/DELETE: The author or an admin can modify/delete it.
        allow update, delete: if request.auth.uid == resource.data.authorId || isAdmin(request.auth.uid);
    }

    // CULTIVATION TASKS
    match /cultivationTasks/{taskId} {
      // READ, WRITE (create, update, delete): A user can only manage their own tasks.
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.authorId || request.auth.uid == request.resource.data.authorId);

      // LIST: A user can list tasks. The client-side query MUST enforce filtering by the user's ID.
      allow list: if request.auth != null;
    }
    
    // DICTIONARY
    match /dictionaryTerms/{termId} {
      // Anyone can read the dictionary terms.
      allow read: if true; 
    }

  }
}
