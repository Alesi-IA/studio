rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite al usuario escribir solo en su propia carpeta de imágenes de perfil.
    // La lectura de imágenes sigue siendo pública.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
