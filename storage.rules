rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile pictures
    match /profile-pictures/{userId}/{fileName} {
      // Anyone can read profile pictures
      allow read;
      
      // Only the authenticated user can write to their own profile picture path.
      // 'write' includes create, update, and delete.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add more specific rules for other paths here
    // For example, for user-uploaded post images:
    // match /posts/{userId}/{postId}/{fileName} {
    //   allow read;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
