rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
 
    // Reglas para perfiles de usuario
    match /users/{userId} {
      // LECTURA: Un usuario autenticado solo puede leer su propio perfil.
      allow read: if request.auth != null && request.auth.uid == userId;

      // ESCRITURA: Solo el dueño del perfil o un administrador puede escribir.
      allow write: if request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];
    }

    // Reglas para la colección de publicaciones
    match /posts/{postId} {
      // LECTURA: Cualquiera autenticado puede leer publicaciones.
      allow get: if request.auth != null;

      // ESCRITURA: Solo el autor puede crear su propia publicación.
      allow create: if request.auth.uid == request.resource.data.authorId;

      // ACTUALIZACIÓN: Solo el autor puede actualizar su publicación.
      allow update: if request.auth.uid == resource.data.authorId;
      
      // ELIMINACIÓN: El autor o un moderador/admin pueden eliminar.
      allow delete: if request.auth.uid == resource.data.authorId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator'];
    }

    // LISTAR: Permite que los usuarios autenticados consulten la lista de publicaciones.
    // Esto es CRUCIAL para que el feed principal funcione.
    match /posts/{postId} {
        allow list: if request.auth != null;
    }

    // Reglas para comentarios (subcolección) - Asumiendo que se migrará a esto en el futuro.
    match /posts/{postId}/comments/{commentId} {
      // LECTURA: Cualquiera puede leer comentarios.
      allow read: if true;
      // ESCRITURA: Solo el autor del comentario, el autor de la publicación o un admin/moderador pueden escribir/eliminar.
      allow write, delete: if request.auth.uid == request.resource.data.authorId ||
        get(/databases/$(database)/documents/posts/$(postId)).data.authorId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator'];
    }

    // Reglas para guías de usuario
    match /userGuides/{guideId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow update, delete: if request.auth.uid == resource.data.authorId ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];
    }

    // Reglas para tareas de cultivo
    match /cultivationTasks/{taskId} {
      allow read, write: if request.auth.uid == resource.data.authorId;
    }
    
    // Reglas para términos del diccionario
    match /dictionaryTerms/{termId} {
      allow read: if true; // Permite que todos lean el diccionario
    }

  }
}
