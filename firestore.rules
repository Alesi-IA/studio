rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para perfiles de usuario
    match /users/{userId} {
      // LECTURA: Cualquier usuario autenticado puede leer perfiles para verlos.
      // Esto es necesario para que el inicio de sesión funcione y para ver los perfiles de otros.
      allow read: if request.auth != null;
      
      // LISTADO: Solo los dueños/co-dueños pueden listar todos los usuarios (para el panel de admin).
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];

      // ESCRITURA: Un usuario puede actualizar su propio perfil.
      // Un administrador también puede actualizar cualquier perfil.
      allow write: if request.auth.uid == userId ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];
    }

    // Reglas para la colección de publicaciones
    match /posts/{postId} {
      // LECTURA y LISTADO: Cualquiera autenticado puede leer y listar publicaciones.
      allow list, get: if request.auth != null;

      // CREACIÓN: Solo el autor puede crear su propia publicación.
      allow create: if request.auth.uid == request.resource.data.authorId;

      // ACTUALIZACIÓN: Solo el autor puede actualizar su publicación.
      allow update: if request.auth.uid == resource.data.authorId;
      
      // ELIMINACIÓN: El autor o un moderador/admin pueden eliminar.
      allow delete: if request.auth.uid == resource.data.authorId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator'];
    }

    // Reglas para guías de usuario
    match /userGuides/{guideId} {
        // LECTURA: Cualquiera autenticado puede leer y listar guías.
        allow read, list: if request.auth != null; 
        
        // CREACIÓN: Un usuario autenticado puede crear una guía si el authorId es el suyo.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
        
        // ACTUALIZACIÓN/ELIMINACIÓN: El autor o un admin pueden modificarla/borrarla.
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.authorId ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner']);
    }

    // Reglas para tareas de cultivo
    match /cultivationTasks/{taskId} {
      // Un usuario puede leer, escribir y eliminar sus propias tareas.
      // La regla `write` cubre `create`, `update`, `delete`.
      allow read, write: if request.auth.uid == resource.data.authorId || request.auth.uid == request.resource.data.authorId;

      // Un usuario puede listar la colección, pero la consulta del cliente DEBE filtrar por authorId.
      // Esta regla es segura porque la consulta en `tools/page.tsx` ya hace `where('authorId', '==', user.uid)`.
      allow list: if request.auth != null;
    }
    
    // Reglas para términos del diccionario
    match /dictionaryTerms/{termId} {
      // Cualquiera puede leer el diccionario
      allow read: if true; 
    }

  }
}
