rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
 
    // Reglas para perfiles de usuario
    match /users/{userId} {
      // LECTURA: Cualquier usuario autenticado puede leer perfiles.
      // Esto es necesario para el panel de admin y para buscar otros usuarios.
      allow read: if request.auth != null;

      // ESCRITURA: Solo el dueño del perfil o un administrador puede escribir.
      allow write: if request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];
    }

    // Reglas para publicaciones
    match /posts/{postId} {
      // LECTURA: Cualquiera puede leer publicaciones.
      allow read: if true;
      // ESCRITURA: Solo el autor o un admin/moderador puede crear/eliminar.
      // Los usuarios solo pueden actualizar sus propias publicaciones.
      allow create, delete: if request.auth.uid == request.resource.data.authorId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator'];
      allow update: if request.auth.uid == resource.data.authorId;
    }

    // Reglas para comentarios
    match /posts/{postId}/comments/{commentId} {
      // LECTURA: Cualquiera puede leer comentarios.
      allow read: if true;
      // ESCRITURA: Solo el autor del comentario, el autor de la publicación o un admin/moderador pueden escribir/eliminar.
      allow write, delete: if request.auth.uid == request.resource.data.authorId ||
        get(/databases/$(database)/documents/posts/$(postId)).data.authorId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner', 'moderator'];
    }

    // Reglas para guías de usuario
    match /userGuides/{guideId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow update, delete: if request.auth.uid == resource.data.authorId ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'co-owner'];
    }

  }
}
